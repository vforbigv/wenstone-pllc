{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data:; script-src 'self'"
        }
      ]
    }
  ],
  "routes": [
    { "src": "/practice-areas", "dest": "/practice-areas.html" },
    { "src": "/contact", "dest": "/contact.html" },
    { "src": "/anti-spam-policy", "dest": "/anti-spam-policy.html" },
    { "src": "/terms-of-service", "dest": "/terms-of-service.html" },
    { "src": "/privacy-policy", "dest": "/privacy-policy.html" }
  ]
}